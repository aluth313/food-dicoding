<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".DetailFoodActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextContent.TitleMedium.Bold"
            tools:text="@string/foods_name"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_ingredients"
            style="@style/TextContent.TitleMedium"
            android:text="@string/ingredients"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_detail_ingredients"
            style="@style/TextContent"
            tools:text="@string/ingredients"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ingredients"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/TextContent.TitleMedium"
            android:text="@string/city"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_ingredients"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_detail_city"
            style="@style/TextContent"
            tools:text="@string/city"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_city"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextContent.TitleMedium"
            android:text="@string/description"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_city"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_detail_description"
            style="@style/TextContent"
            tools:text="@string/description"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>